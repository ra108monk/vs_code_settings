{
  "window.openFilesInNewWindow": "off",
  "CodeGPT.Autocomplete.enabled": true,
  "CodeGPT.apiKey": "OpenAI",
  "http.proxyAuthorization": null,
  "http.proxySupport": "fallback",
  "workbench.iconTheme": "catppuccin-perfect-aura",
  "editor.folding": false,
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",

  //auto close tags
  "editor.linkedEditing": true,
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,

  "editor.quickSuggestionsDelay": 0,
  // "workbench.editor.enablePreview": false,

  //Apperance
  "editor.glyphMargin": false,
  "editor.scrollbar.horizontal": "hidden",
  // "editor.scrollbar.vertical": "hidden",
  // "window.density.editorTabHeight": "compact",
  "workbench.activityBar.location": "top",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,

  //Wrapping
  "editor.wordWrap": "bounded",
  "editor.wrappingIndent": "same",
  "editor.wordWrapColumn": 140,

  //Cursor
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line-thin",
  "editor.cursorSmoothCaretAnimation": "explicit",

  // Font
  "editor.fontSize": 17,
  "editor.lineHeight": 30,
  "editor.fontLigatures": true,
  // "editor.inlayHints.fontFamily": "PragmataPro",
  "editor.inlayHints.fontFamily": "Iosevka SS03 Light",
  // "editor.fontFamily": "Iosevka Term SS03, Monaco, 'Courier New', Fira Code, Menlo, monospace",
  "editor.fontFamily": "Iosevka SS03 Light, Monaco, Fira Code, Iosevka Term SS03, Cascadia Code",
  "markdown.preview.fontFamily": "Iosevka SS03 Light",
  "debug.console.fontFamily": "Fira Code, Iosevka SS03 Light",

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, return…
          "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  //Explorer
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  //Разрешить уменьшение размера вкладок, когда доступного места недостаточно для отображения всех вкладок одновременно.
  // "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "newUntitledFile",

  //Debug
  "debug.toolBarLocation": "hidden",
  "debug.focusWindowOnBreak": false,
  "debug.showInlineBreakpointCandidates": false,
  "debug.showBreakpointsInOverviewRuler": false,

  // Emmet
  "emmet.includeLanguages": {
    "blade": "html",
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "editor.formatOnSave": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": false,
  "editor.codeActionsOnSave": {
    //	"source.organizeImports": "explicit"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  //Включите круглые скобки вокруг единственного параметра функции стрелки
  // "prettier.arrowParens": "avoid",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // "files.associations": { "*.scss": "postcss", "*.module.scss": "postcss" },
  "editor.inlineSuggest.enabled": true,

  //Breadcrumbs
  "breadcrumbs.icons": false,
  "breadcrumbs.showKeys": false,
  "breadcrumbs.showFiles": false,
  "breadcrumbs.symbolPath": "off",
  "breadcrumbs.showArrays": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showFields": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showConstructors": false,

  //JS & TS
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.quoteStyle": "double",
  "javascript.preferences.quoteStyle": "double",
  "javascript.format.semicolons": "remove",
  "typescript.format.semicolons": "insert",
  // Использование экспериментальных декораторов в JS/TS
  "js/ts.implicitProjectConfig.experimentalDecorators": true,

  //Spell checker
  "cSpell.language": "en,ru",
  "cSpell.userWords": [],
  "cSpell.enabled": true,
  "cSpell.enableFiletypes": ["blade", "jsx", "tsx", "ts", "js", "scss", "sass", "vue"],

  "editor.unicodeHighlight.allowedCharacters": {
    "а": true,
    "с": true,
    "Т": true,
    "б": true,
    "е": true
  },
  "editor.hideCursorInOverviewRuler": true,
  "git.enableSmartCommit": true,

  "files.exclude": {
    "**/.expo": true,
    "**/.expo-shared": true,
    "**/.idea": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/dist": true
  },

  // autosave
  "files.autoSave": "onFocusChange",

  // OTHER
  // Язык по умолчанию для новых файлов
  "files.defaultLanguage": "plaintext",
  // Игнорировать пробелы при сравнении в редакторе diff
  "diffEditor.ignoreTrimWhitespace": false,
  // Открытие не доверенных файлов без предупреждения
  "security.workspace.trust.untrustedFiles": "open",
  // Автоматически изменять предложение автозаполнения на основе предыдущего выбора
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // Подтверждение перед закрытием окна только при использовании клавиатуры
  "window.confirmBeforeClose": "keyboardOnly",
  // Не открывать репозиторий в родительских папках
  "git.openRepositoryInParentFolders": "never",

  // Поведение при обнаружении нескольких определений
  "editor.gotoLocation.multipleDefinitions": "goto",
  // Скрыть подсказку в пустом редакторе
  "workbench.editor.empty.hint": "hidden",
  "vscodeGoogleTranslate.preferredLanguage": "Russian",
  "prettier.printWidth": 100,
  "workbench.colorTheme": "Catppuccin Mocha",
  "smartClicks.rules": {},
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  }
}
